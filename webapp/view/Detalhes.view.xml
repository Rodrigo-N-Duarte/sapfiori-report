<mvc:View
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="br.com.fioriappreport356.controller.Detalhes"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    displayBlock="true"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    height="100%"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        showEditHeaderButton="true"
        editHeaderButtonPress="handleEditBtnPress"
        upperCaseAnchorBar="false"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle1"
            >
                <expandedHeading>
                    <m:HBox id="_IDGenHBox1">
                        <m:Title
                            id="_IDGenTitle1"
                            text="{Productid}"
                            wrapping="true"
                        />
                    </m:HBox>
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox
                        id="_IDGenFlexBox1"
                        fitContainer="true"
                        alignItems="Center"
                    >
                        <core:Icon
                            id="_IDGenIcon1"
                            src="sap-icon://product"
                            size="2em"
                            class="sapUiSmallMargin"
                        />
                        <m:Title
                            id="_IDGenTitle2"
                            text="Denise Smith"
                            wrapping="true"
                        />
                    </m:FlexBox>
                </snappedHeading>

                <expandedContent>
                    <m:Text
                        id="_IDGenText1"
                        text="{Name}"
                    />
                </expandedContent>

                <snappedContent>
                    <m:Text
                        id="_IDGenText2"
                        text="{Name}"
                    />
                </snappedContent>

                <snappedTitleOnMobile>
                    <m:Title
                        id="_IDGenTitle3"
                        text="{Name}"
                    />
                </snappedTitleOnMobile>

                <actions>
                    <m:Button
                        id="_IDGenButton1"
                        text="{i18n>btnBack}"
                        type="Emphasized"
                        icon="sap-icon://nav-back"
                        press="onPressBackBtn"
                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:HeaderContainer
                id="_IDGenHeaderContainer1"
                scrollStep="200"
                showDividers="false"
            >
                <m:HBox
                    id="_IDGenHBox2"
                    class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                >
                    <core:Icon
                        id="_IDGenIcon2"
                        src="sap-icon://product"
                        size="2em"
                        class="sapUiMediumMarginEnd sapUiSmallMarginBottom"
                    />
                    <m:VBox
                        id="_IDGenVBox2"
                        class="sapUiMediumMarginEnd sapUiSmallMarginBottom"
                    >
                        <m:Link
                            id="_IDGenLink5"
                            text="{i18n>headerCategory}"
                        />
                        <m:HBox id="_IDGenHBox3">
                            <m:Label
                                id="_IDGenLabel4"
                                text="{i18n>headerGroup}"
                                class="sapUiSmallMarginEnd"
                            />
                            <m:Text
                                id="_IDGenText3"
                                text="{Category}"
                            />
                        </m:HBox>
                    </m:VBox>
                </m:HBox>
                <m:VBox
                    id="_IDGenVBox3"
                    class="sapUiMediumMarginEnd sapUiSmallMarginBottom"
                >
                    <m:Title
                        id="_IDGenTitle4"
                        text="{i18n>headerDescription}"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:Text
                        id="_IDGenText4"
                        text="{Description}"
                        width="320px"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox4"
                    class="sapUiMediumMarginEnd sapUiSmallMarginBottom"
                >
                    <m:Title
                        id="_IDGenTitle5"
                        text="{i18n>headerStatus}"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        id="_IDGenObjectStatus1"
                        xmlns="sap.m"
                        state="{path: 'Status', formatter: '.formatStateStatusProduto'}"
                        icon="{path: 'Status', formatter: '.formatIconProduct'}"
                        text="{path: 'Status', formatter: '.formatStatusProduto'}"
                        inverted="true"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox5"
                    class="sapUiMediumMarginEnd sapUiSmallMarginBottom"
                >
                    <m:Title
                        id="_IDGenTitle6"
                        text="{i18n>headerPrice}"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectNumber
                        id="_IDGenObjectNumber1"
                        xmlns="sap.m"
                        number="{ parts: [{path:'Price'}, {path:'Currencycode'}], type:'sap.ui.model.type.Currency', formatOptions: {showMeasure: false}}"
                        unit="{Currencycode}"
                        state="Information"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox6"
                    class="sapUiMediumMarginEnd sapUiSmallMarginBottom"
                >
                    <m:HBox id="_IDGenHBox4">
                        <m:Label
                            id="_IDGenLabel5"
                            text="{i18n>headerCreatedBy}"
                            class="sapUiSmallMarginEnd"
                        />
                        <m:Link
                            id="_IDGenLink6"
                            text="{Usercreate}"
                        />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox5">
                        <m:Label
                            id="_IDGenLabel6"
                            text="{i18n>headerCreatedOn}"
                            class="sapUiSmallMarginEnd"
                        />
                        <m:Link
                            id="_IDGenLink7"
                            text="{path:'Createdat', formatter: '.formatTableDate'}"
                        />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox6">
                        <m:Label
                            id="_IDGenLabel7"
                            text="{i18n>headerUpdatedBy}"
                            class="sapUiSmallMarginEnd"
                        />
                        <m:Link
                            id="_IDGenLink8"
                            text="{Userupdate}"
                        />
                    </m:HBox>
                    <m:HBox id="_IDGenHBox7">
                        <m:Label
                            id="_IDGenLabel8"
                            text="{i18n>headerUpdatedOn}"
                            class="sapUiSmallMarginEnd"
                        />
                        <m:Link
                            id="_IDGenLink9"
                            text="{path:'Changedat', formatter: '.formatTableDate'}"
                        />
                    </m:HBox>
                </m:VBox>
            </m:HeaderContainer>
            
        </headerContent>

        <sections>
            <ObjectPageSection
                titleUppercase="false"
                id="goalsSection"
                title="{i18n>sectionBasicInformation}"
            >
                <subSections>
                    <ObjectPageSubSection id="goalsSectionSS1">
                        <blocks>
                            <form:SimpleForm id="_IDGenSimpleForm1">
                                <form:content>
                                    <m:Label
                                        id="_IDGenLabel9"
                                        text="{i18n>sfCategory}"
                                    />
                                    <m:Text
                                        id="_IDGenText5"
                                        text="{to_category/Description}"
                                        class="sapMObjectNumberMedium"
                                    />
                                    <m:Label
                                        id="_IDGenLabel10"
                                        text="{i18n>sfSupplier}"
                                    />
                                    <m:Text
                                        id="_IDGenText6"
                                        text="{Supplierid} {Suppliername}"
                                        class="sapMObjectNumberMedium"
                                    />
                                </form:content>
                            </form:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                titleUppercase="false"
                id="personalSection"
                title="Personal"
                importance="Medium"
            >
                <subSections>
                    <ObjectPageSubSection
                        id="personalSectionSS1"
                        title="{i18n>technicalInformation}"
                        titleUppercase="false"
                    >
                        <blocks>
                            <form:SimpleForm id="_IDGenSimpleForm2">
                                <form:content>
                                    <m:Label
                                        id="_IDGenLabel11"
                                        text="{i18n>sfMeasureUnit}"
                                    />
                                    <m:Text
                                        id="_IDGenText7"
                                        text="{Measureunit}"
                                        class="sapMObjectNumberMedium"
                                    />
                                    <m:Label
                                        id="_IDGenLabel12"
                                        text="{i18n>sfWeightmeasure}"
                                    />
                                    <m:Text
                                        id="_IDGenText8"
                                        text="{path: 'Weightmeasure', formatter: '.formatFloatNumber'}"
                                        class="sapMObjectNumberMedium"
                                    />
                                    <m:Label
                                        id="_IDGenLabel13"
                                        text="{i18n>sfWeightunit}"
                                    />
                                    <m:Text
                                        id="_IDGenText9"
                                        text="{Weightunit}"
                                        class="sapMObjectNumberMedium"
                                    />
                                    <m:Label
                                        id="_IDGenLabel14"
                                        text="{i18n>sfWidth}"
                                    />
                                    <m:Text
                                        id="_IDGenText10"
                                        text="{path: 'Width', formatter: '.formatFloatNumber'}"
                                        class="sapMObjectNumberMedium"
                                    />
                                    <m:Label
                                        id="_IDGenLabel15"
                                        text="{i18n>sfDepth}"
                                    />
                                    <m:Text
                                        id="_IDGenText11"
                                        text="{path: 'Depth', formatter: '.formatFloatNumber'}"
                                        class="sapMObjectNumberMedium"
                                    />
                                    <m:Label
                                        id="_IDGenLabel16"
                                        text="{i18n>sfHeight}"
                                    />
                                    <m:Text
                                        id="_IDGenText12"
                                        text="{path: 'Height', formatter: '.formatFloatNumber'}"
                                        class="sapMObjectNumberMedium"
                                    />
                                    <m:Label
                                        id="_IDGenLabel17"
                                        text="{i18n>sfDimunit}"
                                    />
                                    <m:Text
                                        id="_IDGenText13"
                                        text="{Dimunit}"
                                        class="sapMObjectNumberMedium"
                                    />
                                </form:content>
                            </form:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
